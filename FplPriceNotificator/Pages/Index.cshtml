@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table">
    <caption>Droppers</caption>
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Players[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players[0].PriceChange)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Droppers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceChange)
            </td>
        </tr>
    }
    </tbody>
</table>

<table class="table">
    <caption>Risers</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].PriceChange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Risers)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceChange)
                </td>
            </tr>
            }
    </tbody>
</table>
