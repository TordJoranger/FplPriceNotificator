@page
@using FplPriceNotificator.Models
@model FplPriceNotificator.Pages.EmailInfo.EditModel
@{
    ViewData["Title"]="Edit";
}

<h2>Edit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailInfo.Email" class="control-label"></label>
                <input asp-for="EmailInfo.Email" class="form-control" />
                <span asp-validation-for="EmailInfo.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Team Id</label>
                <input asp-for="EmailInfo.Entry" class="form-control" />
                <span asp-validation-for="EmailInfo.Entry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EmailInfo.WantDrops" /> Drops
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EmailInfo.WantRises" />Rises
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EmailInfo.Threshold" class="control-label"></label>
                <select asp-for="EmailInfo.Threshold" asp-items="@(Html.GetEnumSelectList<Threshold>())"
                        class="form-control"></select>
                <span asp-validation-for="EmailInfo.Threshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

